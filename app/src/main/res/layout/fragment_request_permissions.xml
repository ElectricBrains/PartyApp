<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/request_permissions_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/request_permissions_description"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textAppearance="?attr/textAppearanceSubtitle1"
        />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/request_permissions_submit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/get_permission"
            app:layout_constraintTop_toBottomOf="@id/request_permissions_description"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            style="?attr/materialButtonStyle"
            />

    <com.google.android.material.button.MaterialButton
            android:id="@+id/open_system_settings_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/show_settings"
            android:visibility="invisible"
            app:layout_constraintTop_toBottomOf="@id/request_permissions_submit_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            style="?attr/materialButtonOutlinedStyle"
            />

</androidx.constraintlayout.widget.ConstraintLayout>